@charset "utf-8";


.about_wrap{position: relative;margin:50px auto}
.side_nav{width: 160px;position:absolute;left:0;top:0;background:#fff;overflow:hidden;border-radius: 4px;box-shadow:0 2px 4px #B0B0B0;}
.side_nav a{display:block;width:100%;height:50px;line-height:50px;border-bottom:1px solid #F0F0F0;color:#6D6D6D;font-size:16px;text-align: center;}
.side_nav a.current{background:#393E46;color:#fff;}

.main{margin-left:180px;background:#fff;overflow:hidden;border-radius: 4px;box-shadow:0 2px 4px #B0B0B0;min-height: 210px;}
.main .post{padding:50px 30px;}
.main .post .logo{margin:0 auto 40px;}
.main .post p{line-height: 30px;margin-bottom:30px;color:#4A4A4A;font-size:14px;text-indent:2em;}

.main .shiming_yuanjing{margin:50px 26px 0;overflow: hidden;}
.main .shiming_yuanjing .words{float:left;width:335px;height:162px;padding:42px 0;text-align: center;margin-bottom:50px;}
.main .shiming_yuanjing .words b{display:block;color:#4A4A4A;font-size:36px;line-height:50px;font-weight: normal;margin-bottom:10px;}
.main .shiming_yuanjing .words b strong{font-size:48px;color:#3DAAE2;border-bottom:3px solid #3DAAE2;font-weight: normal;}
.main .shiming_yuanjing .words p{line-height:30px;color:#4A4A4A;font-size:20px;text-align: center;}
.main .shiming_yuanjing img{float:left;height:246px;margin-bottom:50px;}

.timeline{background:url(img/timeline_bgline.png) repeat-y center top;margin:40px;}
.timeline .year{height:30px;margin-bottom:25px;}
.timeline .year span{background:#3398DB;width:80px;height:30px;text-align: center;line-height:30px;color:#fff;font-size:14px;display:block;margin:0 auto;border-radius:4px;}
.timeline .box{position:relative;overflow:hidden;width:100%;}
.timeline .box .month{position:absolute;top:16px;height:18px;background:#fff;line-height: 18px;font-size:12px;color:#4A4A4A;}
.timeline .box .month i{height:10px;width:10px;position:absolute;top:4px;background: #3398DB;border-radius: 100%;}
.timeline .box .month.p_r{left:50%;margin-left:-5px;padding-left:16px;}
.timeline .box .month.p_r i{left:0;}
.timeline .box .month.p_l{right:50%;margin-right:-5px;padding-right:16px;}
.timeline .box .month.p_l i{right:0;}
.timeline .img_box.cw{margin-top:65px!important;}
.timeline .img_box a{display: block;position: relative;}
.timeline .img_box img{display:block;width:100%;}
.timeline .img_box a span{position: absolute;left: 0;top:0;height: 100%;width: 100%;filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#88000000',endColorstr='#88000000');     /* IE6,IE7 */
    -ms-filter:"progid:DXImageTransform.Microsoft.gradient(startColorstr=#88000000, endColorstr=#88000000)";     /* IE8 */
    background: rgba( 0, 0, 0, 0.5);-webkit-transition:all .8s ease;-moz-transition:all .8s ease;-o-transition:all .8s ease;transition:all .8s ease;}
.timeline .img_box a:hover span{opacity:0;}
.timeline .img_box b{display:block;font-weight: normal;color:#4a4a4a;font-size:12px;line-height: 18px;padding:2px 0;}
.timeline .l{float:left;width:50%;}
.timeline .r{float:right;width:50%;}
.timeline .l .img_box{margin:0 50px 25px 35px;}
.timeline .r .img_box{margin:0 35px 25px 50px;}

.timeline .word_box{overflow:hidden;margin-bottom:16px;}
.timeline .l .word_box{margin-right:50px;}
.timeline .r .word_box{margin-left:50px;}
.timeline .word_box p{padding:15px 25px;background:#F7F8FA;color:#4A4A4A;font-size:12px;line-height:20px;border-radius:4px;}
.timeline .l .word_box p{float:right;text-align: right;}
.timeline .r .word_box p{float:left;}


.lb-container{padding:0;}
.lb-data .lb-caption{line-height: 40px;font-size:16px;}
.lightbox .lb-image{border-radius:0;}

.about_nav{width: 100%;overflow:hidden;text-align: center;margin:0 0 30px;}
.about_nav a{display:inline-block;width:130px;height:45px;line-height:45px;background:#fff;margin:0 18px;color:#646464;font-size:14px;text-align: center;cursor:pointer;}
.about_nav a.current{background:#3398DB;color:#fff;}



.top_pos{margin-top:-10px!important;}
.logo_list_wrap{margin-left:180px;overflow:hidden;min-height: 260px;}
.logo_list{margin:0 -10px;display:none;}
.logo_list.current{display:block;}
.logo_list li{float:left;width:33.3%;}
.logo_list li span{display:block;margin:10px;background:#fff;box-shadow:0 2px 4px #B0B0B0}
.logo_list li span img{display: block;width:100%;}


.bp_main{margin-left:180px;min-height: 260px;}
.bp_main .box{background:#fff;overflow:hidden;border-radius: 4px;box-shadow:0 2px 4px #B0B0B0;padding:25px;font-size:14px;line-height:30px;color:#4A4A4A;}
.bp_main .box b{line-height:40px;font-size:18px;color:#4A4A4A;font-weight:600;}
.bp_main .box a{color:#3DAAE2;}
.bp_main .tit{display:block;line-height:30px;margin-top:10px;font-size:14px;color:#4A4A4A;font-weight: 600;}
.bp_main .box img.bp_form_img{width:100%;display:block;}
.bp_main .box .down_bp_form{display: block;width:160px;padding-right:40px;position: relative;text-align: center;line-height:34px;height:34px;border:1px solid #D2D2D2;font-size:14px;color:#3398DB;margin-top:10px;font-weight:500;-webkit-transition:all .4s ease;-moz-transition:all .4s ease;-o-transition:all .4s ease;transition:all .4s ease;}
.bp_main .box .down_bp_form .ico{position:absolute;right:-1px;top:-1px;height:36px;width:40px;background:url(img/down_icon.png) no-repeat center center #3398DB;}
.bp_main .box .down_bp_form:hover{border-color:#3398DB;}