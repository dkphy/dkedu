@charset "utf-8";
.thumbs_summary{background:#fff;padding:45px 0;}
.thumbs_summary p{font-size:14px;color:#646464;line-height:30px;}

.thumbs_nav{width: 100%;overflow:hidden;text-align: center;margin:45px 0;}
.thumbs_nav a{display:inline-block;width:130px;height:45px;line-height:45px;background:#fff;margin:0 18px;color:#646464;font-size:14px;text-align: center;cursor:pointer;}
.thumbs_nav a.current{background:#3398DB;color:#fff;}

.thumb_list_summary{padding:0 0 10px 0;}
.thumb_list_summary p{font-size:12px;line-height:20px;color:#4A4A4A;}

.thumb_list{margin:0 -10px 45px;overflow:hidden;}
.thumb_list li{width:33.3%;float: left;}
.thumb_list li .box{margin:10px;overflow:hidden;box-shadow: 0 2px 4px #B0B0B0;}
.thumb_list li img{width:100%;display:block;}
.thumb_list li b{color:#646464;font-weight: normal;margin:0 10px;line-height:20px;height:20px;padding:10px 0;font-size:14px;display:block;text-overflow:ellipsis;overflow:hidden; white-space:nowrap;}
.thumb_list li p{margin:0 10px 10px;line-height:16px;color:#9B9B9B;height:48px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;}
